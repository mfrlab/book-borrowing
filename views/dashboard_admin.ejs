<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Book Borrowing</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Library</a>
                <a class="nav-link" href="/logout">Logout</a>
            </div>
        </nav>

        <div>
            <% if (msg.length !== 0) { %>
                <div class="alert alert-success" role="alert"><%= msg %></div>
            <% } %>

            <table class="table table-dark table-hover caption-top">
                <caption>List of Books</caption>
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Publisher</th>
                        <th scope="col">Writer</th>
                        <th scope="col">Status</th>
                        <th scope="col">Tgl Peminjaman</th>
                        <th scope="col">Due Date</th>
                        <th scope="col">Tgl Pengembalian</th>
                    </tr>
                </thead>
                <tbody>
                    <% books.forEach( function(book, index) { %>
                        <tr>
                            <th scope="row"><%= index+1 %></th>
                            <td><%= book.title %></td>
                            <td><%= book.publisher %></td>
                            <td><%= book.writer %></td>
                            <td><%= book.status %></td>
                            <td><%= book.Loans[book.Loans.length-1].loanDate %></td>
                            <td><%= book.Loans[book.Loans.length-1].returnDueDate %></td>
                            <td><%= book.Loans[book.Loans.length-1].returnDate %></td>
                        </tr>
                    <% }) %>
                        
                </tbody>
            </table>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>